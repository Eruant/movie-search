{
  "name": "movie-search",
  "version": "0.0.1",
  "description": "UI to search the Movie DB",
  "main": "server/index.js",
  "scripts": {
    "build": "browserify client/index.js > static/bundle.js",
    "test": "tap ./**/*.test.js --cov",
