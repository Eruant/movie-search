  "author": "Matt Gale <matt@littleball.co.uk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eruant/movie-search/issues"
  },
  "homepage": "https://github.com/Eruant/movie-search#readme",
  "dependencies": {
    "browserify": "^13.1.1",
    "h2o2": "^5.4.0",
    "hapi": "^16.0.1",
    "inert": "^4.0.3",
    "isomorphic-fetch": "^2.2.1",
    "nock": "^9.0.2",
    "nodemon": "^1.11.0",
    "tap": "^8.0.1"
  }
}
